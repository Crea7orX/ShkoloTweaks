{
    "name": "ShkoloTweaks",
    "description": "Tweaks for Shkolo",
    "version": "0.0.2",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "permissions": ["tabs", "storage"]
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.shkolo.bg/*", 
                "*://*.shkolo.com/*"
            ],
            "js": ["app.js"]
        }
    ]
}